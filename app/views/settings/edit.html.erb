<h1>Change settings for plant</h1>
<%= form_for [@plant, @setting] do |setting| %>
  <%= setting.label :single_watering_amount %>
  <%= setting.number_field :single_watering_amount %><br>
  <%= setting.label :min_air_humidity %>
  <%= setting.number_field :min_air_humidity %><br>
  <%= setting.label :max_air_humidity %>
  <%= setting.number_field :max_air_humidity %><br>
  <%= setting.label :min_soil_moisture %>
  <%= setting.number_field :min_soil_moisture %><br>
  <%= setting.label :max_soil_moisture %>
  <%= setting.number_field :max_soil_moisture %><br>
  <%= setting.label :min_temperature %>
  <%= setting.number_field :min_temperature %><br>
  <%= setting.label :max_temperature %>
  <%= setting.number_field :max_temperature %><br>
  <%= setting.label :max_insolation %>
  <%= setting.number_field :max_insolation %><br>
  <%= setting.label :min_water_amount %>
  <%= setting.number_field :min_water_amount %><br>

  <%= setting.submit "Update Setting" , style: "color:white" ,class:"btn btn-primary"%>
<% end %>

<%= form_for [@plant, @setting] do |setting| %>
  <p>
    <p style="font-size: x-large; color: darkblue" >Use predefined Set:</p>
    <p><%= setting.collection_select(:setting_set, SettingSet.all, :id, :name) %></p>
    <%= setting.submit "Update Setting", style: "color:white" ,class:"btn btn-primary"  %>
  </p>
<% end %>

<button class="btn btn-secondary"><%= link_to 'Back', plants_path, style: "color:white"   %></button>