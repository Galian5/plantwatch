<p>
  <strong>Device:</strong>
  <%= @device.name %>
</p></br>
<p>
  <strong>URI Address:</strong>
  <%= @device.uri_address %>
</p>
<p>
  <strong>Plants monitored by this device:</strong>
  <% @device.plants.each do |plant| %>
    <p>
      <%= plant.name %>
      <button class="btn btn-outline-secondary"><%= link_to 'Show', plant_path(plant.id)%></button>
    </p>
  <% end %>
</p>

<button class="btn btn-secondary"><%= link_to 'Back', devices_path, style: "color:white"   %></button>
