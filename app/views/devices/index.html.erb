<h1>Available devices</h1>
<p>List of devices, choose which one you want to check</p>
<% @devices.each do |t| %>
  <p><%= t.name %>   <%= link_to 'Show', device_path(t.id) %>
  <%= link_to 'Edit', edit_device_path(t.id) %>
  <td><%= link_to 'Destroy', device_path(t.id),
                  method: :delete,
                  data: { confirm: 'Confirm removal of this device' } %></td></p>
<% end %>


<button class="btn btn-outline-primary"><%= link_to 'Add new device', new_device_path %></button>
<button class="btn btn-outline-primary"><%= link_to 'Back', plants_path %></button>